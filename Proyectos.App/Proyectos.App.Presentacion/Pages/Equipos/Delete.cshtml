@page
@model Proyectos.App.Presentacion.Pages.Equipos.DeleteModel
@{
    ViewData["Title"] = "Eliminar Equipo";
}

<div class="card">
    <div class="card-header">
        <h2 class="text-info">Datos del  Equipo</h2>
    </div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-sumary="ModelOnly" class="text-danger">
                <!-- se envía campo de la PK oculto -->
                <input type="hidden"  asp-for="Equipo.id" />
                <div class="container" style="padding: 30px">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="Equipo.id"  class="text-primary"></label>
                            </div>
                            <div class="col-sm-1">
                                <input asp-for="Equipo.id" class="form-control" value = "@Model.Equipo.id" disabled />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="Equipo.codigo"  class="text-primary"></label>
                            </div>
                            <div class="col-sm-3">
                                <input asp-for="Equipo.codigo" class="form-control" value = "@Model.Equipo.codigo" disabled />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="Equipo.nombre"  class=" text-primary"></label>
                            </div>
                            <div class="col-sm-6">
                                <input asp-for="Equipo.nombre" class="form-control" value = "@Model.Equipo.nombre" disabled />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="Equipo.meet"  class=" text-primary"></label>
                            </div>
                            <div class="col-sm-6">
                                <input type="emeet" asp-for="Equipo.meet" class="form-control" value = "@Model.Equipo.meet" disabled />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="Equipo.whatsapp"  class=" text-primary"></label>
                            </div>
                            <div class="col-sm-3">
                                <input asp-for="Equipo.whatsapp" class="form-control" value = "@Model.Equipo.whatsapp" disabled />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="Equipo.vigente"  class=" text-primary"></label>
                            </div>
                            <div class="col-sm-3">
                                <input class="form-check-input" type="checkbox" asp-for="Equipo.vigente" class="form-control" value = "@Model.Equipo.vigente" disabled />
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2 offset-sm-2"> 
                                <input type="submit" value="Eliminar" class="btn btn-danger form-control" />
                            </div>
                            <div class="col-sm-4">
                                <a asp-page="List" class="btn btn-primary form-control">Volver a la Lista</a>
                            </div>                            
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>




