@page
@model Proyectos.App.Presentacion.Equipos.CrearModel
@{
    ViewData["Title"] = "Crear Equipo";
}

<div class="card">
    <div class="card-header">
        <h2 class="text-info">Crear un nuevo Equipo</h2>
    </div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-sumary="ModelOnly" class="text-danger">
                <div class="container" style="padding: 50px">

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="Equipo.codigo"></label>
                            </div>
                            <div class="col-sm-3">
                                <input asp-for="Equipo.codigo" class="form-control" />
                            </div>
                            <span asp-validation-for="Equipo.codigo" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="Equipo.nombre"></label>
                            </div>
                            <div class="col-sm-6">
                                <input asp-for="Equipo.nombre" class="form-control" />
                            </div>
                            <span asp-validation-for="Equipo.nombre" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="Equipo.tema"></label>
                            </div>
                            <div class="col-sm-6">
                                <input asp-for="Equipo.tema" class="form-control" />
                            </div>
                            <span asp-validation-for="Equipo.tema" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="Equipo.formador"></label>
                            </div>
                            <div class="col-sm-6">
                                <select asp-for="Equipo.formador">
                                    @foreach (var formador in Model.formadores)  {                
                                       <option value=@formador.id>@formador.nombre</option>
                                    }
                                </select>
                            </div>
                            <span asp-validation-for="Equipo.formador" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="Equipo.tutor"></label>
                            </div>
                            <div class="col-sm-6">
                                <select asp-for="Equipo.tutor">
                                    @foreach (var tutor in Model.tutores)  {                
                                       <option value=@tutor.id>@tutor.nombre</option>
                                    }
                                </select>
                            </div>
                            <span asp-validation-for="Equipo.tutor" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="Equipo.estadoProyecto"></label>
                            </div>
                            <div class="col-sm-6">
                                <select asp-for="Equipo.estadoProyecto">
                                    @foreach (var estadoProyecto in Model.estadoProyectos)  {                
                                       <option value=@estadoProyecto.id>@estadoProyecto.nombre</option>
                                    }
                                </select>
                            </div>
                            <span asp-validation-for="Equipo.estadoProyecto" class="text-danger"></span>
                        </div>
                    </div>

                     
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="Equipo.meet"></label>
                            </div>
                            <div class="col-sm-6">
                                <input type="emeet" asp-for="Equipo.meet" class="form-control" />
                            </div>
                            <span asp-validation-for="Equipo.meet" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="Equipo.whatsapp"></label>
                            </div>
                            <div class="col-sm-3">
                                <input asp-for="Equipo.whatsapp" class="form-control" />
                            </div>
                            <span asp-validation-for="Equipo.whatsapp" class="text-danger"></span>
                        </div>
                    </div>                    
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="Equipo.vigente" class="text-primary"></label>
                            </div>
                            <div class="col-sm-6">
                                <input type="checkbox" asp-for="Equipo.vigente" class="form-check-input" value="@Model.Equipo.vigente" checked />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2 offset-sm-2"> 
                                <input type="submit" value="Crear" class="btn btn-success form-control" />
                            </div>
                            <div class="col-sm-4">
                                <a asp-page="List" class="btn btn-primary form-control">Volver a la Lista</a>
                            </div>                            
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>