@page
@model Proyectos.App.Presentacion.Pages.Tutores.DetailsModel
@{
    ViewData["Title"] = "Detalle Tutor";
}

<div class="card">
    <div class="card-header">
        <h2 class="text-info">Datos del  Tutor</h2>
    </div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-sumary="ModelOnly" class="text-primary">
                <div class="container" style="padding: 30px">
                    <!-- se envía campo de la PK oculto -->
                    <input type="hidden"  asp-for="tutor.id" />
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="tutor.identificacion"  class="text-primary"></label>
                            </div>
                            <div class="col-sm-3">
                                @Model.tutor.identificacion;
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="tutor.nombre"  class=" text-primary"></label>
                            </div>
                            <div class="col-sm-6">
                                @Model.tutor.nombre
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="tutor.mail"  class=" text-primary"></label>
                            </div>
                            <div class="col-sm-6">
                                @Model.tutor.mail
                            </div>
                            <span asp-validation-for="tutor.mail" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="tutor.movil"  class=" text-primary"></label>
                            </div>
                            <div class="col-sm-3">
                                @Model.tutor.movil
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="tutor.vigente"  class=" text-primary"></label>
                            </div>
                            <div class="col-sm-3">
                                @Model.tutor.vigente
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-4">
                                <a asp-page="List" class="btn btn-primary form-control">Volver a la Lista</a>
                            </div>                            
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>




                           
