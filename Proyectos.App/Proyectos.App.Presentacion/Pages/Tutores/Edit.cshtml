@page
@model Proyectos.App.Presentacion.Pages.Tutores.EditModel
@{
    ViewData["Title"] = "Editar Tutor";
}

<div class="card">
    <div class="card-header">
        <h2 class="text-info">Actualizar Tutor</h2>
    </div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-sumary="ModelOnly" class="text-danger">
                <!-- se envía campo de la PK oculto -->
                <input type="hidden"  asp-for="tutor.id" />

                <div class="container" style="padding: 50px">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="tutor.id" class="text-primary"></label>
                            </div>
                            <div class="col-sm-1">
                                <input asp-for="tutor.id" class="form-control" value="@Model.tutor.id" disabled />
                            </div>
                            <span asp-validation-for="tutor.id" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="tutor.identificacion" class="text-primary"></label>
                            </div>
                            <div class="col-sm-3">
                                <input asp-for="tutor.identificacion" class="form-control" value=@Model.tutor.identificacion />
                            </div>
                            <span asp-validation-for="tutor.identificacion" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="tutor.nombre" class="text-primary"></label>
                            </div>
                            <div class="col-sm-6">
                                <input asp-for="tutor.nombre" class="form-control" value=@Model.tutor.nombre />
                            </div>
                            <span asp-validation-for="tutor.nombre" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="tutor.mail" class="text-primary"></label>
                            </div>
                            <div class="col-sm-6">
                                <input asp-for="tutor.mail" class="form-control" value=@Model.tutor.mail />
                            </div>
                            <span asp-validation-for="tutor.mail" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="tutor.movil" class="text-primary"></label>
                            </div>
                            <div class="col-sm-3">
                                <input asp-for="tutor.movil" class="form-control" value=@Model.tutor.movil />
                            </div>
                            <span asp-validation-for="tutor.movil" class="text-danger"></span>
                        </div>
                    </div>                    
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="tutor.vigente"  class=" text-primary"></label>
                            </div>
                            <div class="col-sm-3">
                                <input class="form-check-input" type="checkbox" asp-for="tutor.vigente" class="form-control" value = "@Model.tutor.vigente" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2 offset-sm-2"> 
                                <input type="submit" value="Actualizar" class="btn btn-success form-control" />
                            </div>
                            <div class="col-sm-4">
                                <a asp-page="List" class="btn btn-primary form-control">Volver a la Lista</a>
                            </div>                            
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
