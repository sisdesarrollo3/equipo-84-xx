@page
@model Proyectos.App.Presentacion.Pages.Tutores.ListModel
@{
   ViewData["Title"] = "Lista de Tutores";
}
<h1>Listado de Tutores</h1>
<p>
    @Html.ActionLink("Listado Completo", "./List")
</p>

@using (Html.BeginForm())
{
    <p>
        Buscar x Identificación: @Html.TextBox("SearchString")  
        <input type="submit" value="Buscar" />
    </p>
}

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-sm-6">
                <h2><div class="text-info">Lista de Tutores</h2>
            </div>
            <div class="col-sm-6">
                 <a class="btn btn-primary btn-sm" asp-page="./Crear">
                        Crear Tutor
                 </a>
            </div>            
        </div>    
    </div>
    <div class="card-body">
        @if (Model.Tutores.Count() > 0) { 
            <br /><br />
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>@Html.DisplayNameFor(m => m.Tutores.First().id)</th>
                    <th>@Html.DisplayNameFor(m => m.Tutores.First().identificacion)</th>
                    <th>@Html.DisplayNameFor(m => m.Tutores.First().nombre)</th>
                    <th>@Html.DisplayNameFor(m => m.Tutores.First().mail)</th>
                    <th>@Html.DisplayNameFor(m => m.Tutores.First().movil)</th>
                    <th>@Html.DisplayNameFor(m => m.Tutores.First().vigente)</th>
                    <th colspan=3>ACCIONES</th>
                </tr>
                @foreach (var item in Model.Tutores)  {
                <tr>
                    <td>@Html.DisplayFor(m => item.id)</td>
                    <td>@Html.DisplayFor(m => item.identificacion)</td>
                    <td>@Html.DisplayFor(m => item.nombre)</td>
                    <td>@Html.DisplayFor(m => item.mail)</td>
                    <td>@item.movil</td>
                    <td>@Html.DisplayFor(m => item.vigente)</td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-page="./Details" asp-route-tutorId="@item.id">
                            Detalle</a>
                    </td>

                    <td>
                        <a class="btn btn-success btn-sm" asp-page="./Edit"    asp-route-tutorId="@item.id">
                            <i class="bi-pencil-fill"></i>
                            Editar
                        </a>
                    </td> 

                    <td>                                                     
                        <a class="btn btn-danger btn-sm" asp-page="./Delete"   asp-route-tutorId="@item.id">
                            <i class="bi-trash-fill"></i>
                            Eliminar
                        </a>
                    </td> 
                </tr>    
            }
            </table>
        }else{
            <p>No hay Tutores disponibles</p>
        }
    </div>
    </div>
</div>




